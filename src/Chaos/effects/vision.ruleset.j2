; Vision benefit from fortress watchtowers
[effect_fortress_vision]
type    = "Unit_Vision_Radius_Sq"
value   = {{ options.vision.fortressAstronomyBonus }}
reqs    =
    { "type",        "name",      "range"
      "VisionLayer", "Main",      "Local"
      "Extra",       "Fortress",  "Local"
      "Tech",        "Astronomy", "Player"
    }

[effect_airbase_vision]
type    = "Unit_Vision_Radius_Sq"
value   = {{ options.vision.airbaseBonus }}
reqs    =
    { "type",        "name",    "range"
      "VisionLayer", "Main",    "Local"
      "Extra",       "Airbase", "Local"
    }

; Base vision range - radius of vision is sqrt(5) = 2.24 - this is intentionally smaller than the city working area
[effect_city_vision]
type    = "City_Vision_Radius_Sq"
value   = {{ options.vision.cities.base }}
reqs    = 
    { "type",        "name", "range"
      "VisionLayer", "Main", "Local"
    }

; 5 + 5 = 10
[effect_city_vision_1]
type    = "City_Vision_Radius_Sq"
value   = {{ options.vision.cities.electricityBonus }}
reqs    =
    { "type",        "name",        "range"
      "VisionLayer", "Main",        "Local"
      "Tech",        "Electricity", "Player"
    }

; Vision benefit from mountains (for every land unit)
[effect_mountains_vision]
type    = "Unit_Vision_Radius_Sq"
value   = {{ options.vision.mountainBonus }}
reqs    =
    { "type",        "name",       "range", "present"
      "VisionLayer", "Main",       "Local", TRUE
      "Terrain",     "Mountains",  "Local", TRUE
      "UnitClass",   "Sea",        "Local", FALSE
      "UnitClass",   "Trireme",    "Local", FALSE
      "UnitClass",   "Helicopter", "Local", FALSE
      "UnitClass",   "Levitating", "Local", FALSE
      "UnitClass",   "Air",        "Local", FALSE
      "UnitClass",   "Missile",    "Local", FALSE
    }

{% if options.vision.apolloRevealsMap -%}
[effect_apollo_program]
type    = "Reveal_Map"
value   = 1
reqs    =
    { "type", "name", "range"
      "Building", "Apollo Program", "Player"
    }
{%- endif %}

{% if options.vision.internetRevealsCities -%}
[effect_internet_1]
type    = "Reveal_Cities"
value   = 1
reqs    =
    { "type", "name", "range"
      "Building", "Internet", "Player"
    }
{%- endif %}

